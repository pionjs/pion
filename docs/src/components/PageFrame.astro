---
import Default from '@astrojs/starlight/components/PageFrame.astro';
---

<Default>
	<slot name="header" slot="header" />
	<slot name="sidebar" slot="sidebar" />
	<slot />
</Default>

<footer>
	<div class="footer-inner">
		<nav>
			<h3>Discover</h3>
			<ul>
				<li><a href="https://github.com/pionjs/pion/issues">Help and Feedback</a></li>
			</ul>
		</nav>
		<nav>
			<h3>Follow</h3>
			<ul>
				<li><a href="https://github.com/pionjs/pion">GitHub</a></li>
			</ul>
		</nav>
		<nav>
			<h3>Support</h3>
			<ul>
				<li><a href="https://github.com/pionjs/pion/blob/master/CONTRIBUTING.md">Contribute</a></li>
			</ul>
		</nav>
		<div class="footer-badges">
			<a rel="license" href="http://creativecommons.org/licenses/by-sa/4.0/">
				<img
					src="https://i.creativecommons.org/l/by-sa/4.0/88x31.png"
					alt="This work is licensed under a Creative Commons Attribution-ShareAlike 4.0 International License."
					width="88"
					height="31"
				/>
			</a>
			<a href="https://www.netlify.com">
				<img
					src="https://www.netlify.com/img/global/badges/netlify-dark.svg"
					alt="Deploys by Netlify"
					width="100"
					height="65"
				/>
			</a>
		</div>
	</div>
</footer>

<style>
	footer {
		background-color: var(--sl-color-bg-nav);
		border-top: 1px solid var(--sl-color-hairline-shade);
		padding: 2rem var(--sl-nav-pad-x);
		margin-inline-start: var(--sl-content-inline-start);
	}

	.footer-inner {
		display: flex;
		flex-wrap: wrap;
		gap: 2rem;
		max-width: var(--sl-content-width);
		margin: 0 auto;
		align-items: flex-start;
	}

	nav {
		flex: 1;
		min-width: 8rem;
	}

	h3 {
		font-size: var(--sl-text-sm);
		font-weight: 600;
		color: var(--sl-color-white);
		margin-block-end: 0.5rem;
	}

	ul {
		list-style: none;
		padding: 0;
		margin: 0;
	}

	a {
		color: var(--sl-color-gray-2);
		text-decoration: none;
		font-size: var(--sl-text-sm);
	}

	a:hover {
		color: var(--sl-color-white);
	}

	.footer-badges {
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
		align-items: flex-start;
	}
</style>
